{
  "manifest_version": 2,
  "name": "__MSG_extname__",
  "version": "1.2",

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
       "16": "icons/icon16.png",
       "32": "icons/icon32.png",
       "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },

  "default_locale": "en",
  "description": "__MSG_extdescr__",
  "icons": { 
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
   "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*.cgi*"],
      "css": ["css/convert.css"],
      "js": ["js/convert.js"]
    }
  ],

  "permissions": [
    "storage",
    "tabs"
  ]
}