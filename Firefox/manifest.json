{
  "manifest_version": 2,
  "name": "__MSG_extname__",
  "version": "1.2",

  "background": {
    "scripts": ["js/background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon-on.svg"
  },

  "default_locale": "en",
  "description": "__MSG_extdescr__",
  "icons": {
    "48": "icons/icon-on.svg",
    "96": "icons/icon-on.svg"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*.cgi*"],
      "css": ["css/convert.css"],
      "js": ["js/convert.js"]
    }
  ],

  "permissions": [
    "storage",
    "tabs"
  ],

  "applications": {
    "gecko": {
      "id": "ver2ck@gmail.com"
    }
  }
}